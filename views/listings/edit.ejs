<% layout("/layouts/boilerplate") %>

<div class="row mt-4">
  <div class="col-8 offset-2">
    <h2>Edit Your Listing</h2>
    <form
      method="POST"
      action="/listings/<%=listing._id%>?_method=PUT"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3"></div>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          class="form-control"
          name="listing[title]"
          value="<%=listing.title%>"
          type="text"
          required
        />
        <div class="invalid-feedback">Please enter Title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>

        <textarea
          class="form-control"
          name="listing[description]"
          type="text"
          required
        >
        <%=listing.description%>"</textarea
        >
        <div class="invalid-feedback">Please enter a short Description</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          class="form-control"
          name="listing[image][url]"
          value="<%=listing.image.url%>"
          type="text"
          required
        />
        <div class="invalid-feedback">Please enter a valid Image URL</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            class="form-control"
            name="listing[price]"
            value="<%=listing.price%>"
            type="number"
            required
          />
          <div class="invalid-feedback">Please enter valid Price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            class="form-control"
            name="listing[country]"
            value="<%=listing.country%>"
            type="text"
            required
          />
          <div class="invalid-feedback">Please enter valid Country</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          class="form-control"
          name="listing[location]"
          value="<%=listing.location%>"
          type="text"
          required
        />
        <div class="invalid-feedback">Please enter valid Location</div>
      </div>

      <Button class="btn btn-dark edit-btn mt-4 mb-4"> Save Changes </Button>
    </form>
  </div>
</div>
<script src="/js/script.js"></script>
